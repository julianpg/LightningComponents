<aura:component implements="force:lightningQuickActionWithoutHeader,force:hasRecordId" >
    
	<aura:attribute name="isOpen" type="boolean" default="true"/>
    <aura:attribute name="fields" type="Object"/>
    <aura:attribute name="record" type="Object"/>
    <force:recordData aura:id="recordLoader"
                      layoutType="FULL"
					  targetRecord="{!v.record}"
                      recordId="{!v.recordId}" 
                      targetFields="{!v.fields}" 
                      mode="EDIT"
                      recordUpdated="{!c.handleRecordUpdated}"/>
    
    <aura:if isTrue="{!v.isOpen}">       
          <lightning:card iconName="action:new_contact" title="Activate Relationship">
                <div class="slds-align_absolute-center slds-border_top slds-border_bottom slds-text-heading_medium slds-p-bottom_medium slds-p-top_medium">
                    Are you sure you want to activate this relationship?
              	</div>
              	<br/>
              	<br/>
              <div class="slds-float_right ">
                <lightning:button variant="neutral" label="Cancel" title="Cancel" onclick="{!c.close}"/>
                <lightning:button variant="Brand" label="Activate" title="Activate" onclick="{!c.Activate}"/>
              </div>
          </lightning:card>      
      <aura:set attribute="else">
          <lightning:card iconName="action:new_contact" title="Already Active">
              <div class="slds-align_absolute-center slds-border_top slds-border_bottom slds-text-heading_medium slds-p-bottom_medium slds-p-top_medium">
                Relationship is already active
              </div>
          </lightning:card>
      </aura:set>            
   </aura:if>
</aura:component>